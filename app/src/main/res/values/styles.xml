<!--    Text Appearance for buttons-->
    <style name="TextAppearance.ProgressButton.Primary" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Section" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Header" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_headings</item>
    </style>

<!--    end-->

    <style name="TextAppearance.Title" parent="@style/TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance.Body" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

